<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="ContentDescription">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/lanterns"/>

    <ImageView
        android:id="@+id/dog2018"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/dog2018" />

    <TextView
        android:id="@+id/yeardog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dog2018"
        android:layout_alignParentEnd="true"
        android:textColor="@color/dark_orange"
        android:layout_marginEnd="16dp"
        android:textSize="26sp"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:text="@string/yeardog" />

    <TextView
        android:id="@+id/newyear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/red"
        android:layout_marginBottom="16dp"
        android:textSize="46sp"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:text="@string/newyear" />

</RelativeLayout>